@model SliderCreateVM
@{
    ViewData["Title"] = "Create";
}
<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control my-3">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Offer">Offer</label>
            <input asp-for="Offer" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="Offer"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Heading">Heading</label>
            <input asp-for="Heading" type="text" class="form-control ">
            <span class="text-danger" asp-validation-for="Heading"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" type="text" class="form-control ">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-4">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>

