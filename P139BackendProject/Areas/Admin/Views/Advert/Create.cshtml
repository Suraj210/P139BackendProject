@model AdvertCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo">Image</label>
            <input asp-for="Photo" class="form-control my-3">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Offer">Offer</label>
            <textarea style="border-color:grey;" asp-for="Offer" id="description" cols="70"></textarea>
            <span class="text-danger" asp-validation-for="Offer"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-4">Submit</button>
        <a class="btn btn-light" asp-action="Index">Back</a>
    </form>
</div>

@section script{

    <script src="~/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace("description");</script>
}