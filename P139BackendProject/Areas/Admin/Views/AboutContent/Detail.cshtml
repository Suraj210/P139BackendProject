@model AboutContentVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-5">
    <h3>About Content:</h3>
    <div class="slider-text">
        <h3>@Html.Raw(Model.Title)</h3>
        <p>@Model.Description</p>
        <a target="_blank" href="@Model.Video">@Model.Video</a>
    </div>

    <div class="back mt-2">
        <a class="btn btn-info text-white" asp-action="Index">Back</a>
    </div>
</div>

