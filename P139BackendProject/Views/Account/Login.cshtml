@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<!-- Your custom CSS -->
<style>
    body {
        background-color: #f2f2f2;
    }

    .container-register {
        max-width: 400px;
        margin: 100px auto;
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #dc3545; /* Bootstrap danger color */
    }

    label {
        color: #dc3545;
    }

    .btn-christmas {
        background-color: #dc3545;
        color: #fff;
        border: none;
        width: 100%;
    }

        .btn-christmas:hover {
            background-color: #c82333; /* Slightly darker on hover */
        }
</style>


<div class="container-register">
    <h2>Christmas Login</h2>
    <form method="post" asp-controller="Account" asp-action="Login">
        <div class="mb-3">
            <label asp-for="EmailOrUsername" class="form-label">EmailOrUsername</label>
            <input asp-for="EmailOrUsername" class="form-control">
            <span style="color:red;margin-bottom:5px;" asp-validation-for="EmailOrUsername"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control">
            <span style="color:red;margin-bottom:5px;" asp-validation-for="Password"></span>
        </div>
        <button type="submit" class="btn btn-christmas">Login</button>
    </form>
</div>


